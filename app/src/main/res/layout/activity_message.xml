<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="rtl"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            fontPath="fonts/jf.ttf"
            android:layout_alignParentRight="true"
            android:textDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مشاهده الطلب"
                android:textSize="16dp"
                android:layout_gravity="right"
                android:paddingRight="10dp"
                android:id="@+id/viewOrder" />
            <ImageView
                android:gravity="left|center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/white"
                android:src="@drawable/ic_place_black_24dp"/>
            <Button
                android:id="@+id/getDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:height="60dp"
                android:padding="6dp"
                android:text="المسار"
                android:textColor="@color/white"
                android:background="@color/black"
                android:drawableRight="@drawable/ic_place_black_24dp"
                android:textStyle="bold"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/ronded_button1"
        android:layoutDirection="rtl"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:weightSum="100"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="25"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user_default"
                android:tint="@color/white"
                app:civ_circle_background_color="@color/white"
                android:layout_gravity="center|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="25"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/drivername"
                android:text="عبد الله السيد"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="مقبوله"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="25"
            android:layout_height="wrap_content">
            <RatingBar
                android:layout_width="wrap_content"
                android:id="@+id/ratingBar"
                style = "?android:attr/ratingBarStyleSmall"
                android:backgroundTint="@color/white"
                android:rating= "4"
                android:theme="@style/RatingBar"
                android:layout_gravity="center|center_horizontal"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:text="التكلفه : "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="25"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bgcall"
                android:padding="1dp"
                android:id="@+id/call"
                android:src="@drawable/ic_phone"
                android:tint="@color/green" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:transcriptMode="alwaysScroll"
                android:id="@+id/recycler_view">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:background="@color/main"
        android:visibility="gone"
        android:textColor="@color/white"
        android:id="@+id/text_finish"
        android:text="غير قادر علي الرد علي هذه المحادثهلانه تم انهاء الطلب"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:visibility="gone"
        android:id="@+id/box_send_image"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#ddd"
            android:layout_gravity="center_vertical"
            android:src="@drawable/car3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ارسال"
            android:tint="@color/white"
            android:background="@color/main"
            android:textColor="@color/white"
            android:id="@+id/sendButtonImage"/>

    </LinearLayout>
    <include
        layout="@layout/message_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_weight="1" />

</LinearLayout>