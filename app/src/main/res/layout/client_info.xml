<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="horizontal">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ronded_button1"
    android:layoutDirection="rtl"
    android:padding="10dp"
    android:id="@+id/ClientInfo"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="25"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/customers_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_default"
            android:tint="@color/white"
            app:civ_circle_background_color="@color/white"
            android:layout_gravity="center|center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="25"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/customers_username"
            android:text="عبد  السيد"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/white"
        android:layout_weight="25"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:id="@+id/customers_telephone"
            android:text="  "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center|left"
        android:layout_weight="25"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bgcall"
            android:padding="1dp"
            android:id="@+id/call"
            android:src="@drawable/ic_phone"
            android:tint="@color/green" />
    </LinearLayout>

</LinearLayout>

</RelativeLayout>